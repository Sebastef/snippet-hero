{
  "name": "snippet-hero",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "lint": "eslint --ext .js --ext .jsx ./",
    "watch:lint": "watch 'npm run lint' ./ -d -u",
    "clear": "rm -rf build",
    "build:js": "webpack",
    "watch:js": "npm run build:js -- --watch",
    "build:css": "node-sass client/css/app.scss build/app.css",
    "watch:css": "watch 'npm run build:css -s' client/css/ -d -u",
    "build": "npm run clear -s && npm run lint -s && npm run build:css -s && npm run build:js -s",
    "watch": "npm-run-all --parallel watch:css watch:js",
    "livereload": "live-reload build/ --port=9091 --delay=700",
    "test:client": "karma start",
    "server": "node ./bin/www",
    "start": "npm-run-all build --parallel watch server livereload",
    "sequalize": "cd server && sequelize"
  },
  "dependencies": {
    "body-parser": "~1.13.2",
    "cookie-parser": "~1.3.5",
    "debug": "~2.2.0",
    "express": "~4.13.1",
    "jade": "~1.11.0",
    "morgan": "~1.6.1",
    "pg": "^4.4.3",
    "pg-hstore": "^2.3.2",
    "react": "^0.14.2",
    "react-dom": "^0.14.2",
    "sequelize": "^3.13.0",
    "sequelize-cli": "^2.1.0",
    "serve-favicon": "~2.3.0"
  },
  "devDependencies": {
    "babel-core": "^6.1.21",
    "babel-eslint": "^4.1.5",
    "babel-loader": "^6.1.0",
    "babel-preset-es2015": "^6.1.18",
    "babel-preset-react": "^6.1.18",
    "chai": "^3.4.1",
    "eslint": "^1.9.0",
    "eslint-plugin-react": "^3.8.0",
    "karma": "^0.13.15",
    "karma-chai": "^0.1.0",
    "karma-chai-plugins": "^0.6.1",
    "karma-chrome-launcher": "^0.2.1",
    "karma-cli": "^0.1.1",
    "karma-mocha": "^0.2.1",
    "karma-sourcemap-loader": "^0.3.6",
    "karma-webpack": "^1.7.0",
    "live-reload": "^1.1.0",
    "node-sass": "^3.4.2",
    "npm-run-all": "^1.2.13",
    "react-addons-test-utils": "^0.14.2",
    "watch": "^0.16.0",
    "webpack": "^1.12.6"
  }
}
